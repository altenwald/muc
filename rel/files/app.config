[
    {ecomponent, [
        {syslog_name, "muc"},
        {jid, "conference.example.com" },
        {servers, [
            {server_one, [
                {server, "localhost"},
                {port, 5225},
                {pass, "secret"}
            ]}
        ]},
        {throttle, false},
        {access_list_get, []},
        {access_list_set, []},
        {processors, [
            {default, {mod, muc}}
        ]},
        {message_processor, {mod, muc}},
        {presence_processor, {mod, muc}},
        {mnesia_nodes, []},
        {mnesia_callback, []},
        {features, [
            <<"http://jabber.org/protocol/disco#info">>,
            <<"http://jabber.org/protocol/disco#items">>,
            %% TODO: http://xmpp.org/extensions/xep-0059.html
            %% <<"http://jabber.org/protocol/rsm">>,
            <<"http://jabber.org/protocol/muc">>,
            <<"http://jabber.org/protocol/muc#unique">>
        ]},
        {info, [
            {type, <<"text">>},
            {name, <<"Multi-Chat User Component">>},
            {category, <<"conference">>}
        ]},
        {disco_info, true}
    ]},

    {epgsql_pool,  [
        {pools, [ejabberd]},
        {ejabberd, {5, [
            {database, "ejabberd"},
            {host, "127.0.0.1"},
            {port, 5432},
            {username, "ejabberd"},
            {password, "ejabberd2014"}
        ]}}
    ]}, 

    {lager, [
        {handlers, [
            {lager_console_backend, info},
            {lager_file_backend, [
                {"log/error.log", error, 10485760, "$D0", 5},
                {"log/info.log", info, 10485760, "$D0", 5}
            ]}
        ]},
        {crash_log, "log/crash.log"},
        {crash_log_msg_size, 65536},
        {crash_log_size, 10485760},
        {crash_log_date, "$D0"},
        {crash_log_count, 5},
        {error_logger_redirect, true}
    ]},

    %% SASL config
    {sasl, [
        {sasl_error_logger, {file, "log/sasl-error.log"}},
        {errlog_type, error},
        {error_logger_mf_dir, "log/sasl"},      % Log directory
        {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
        {error_logger_mf_maxfiles, 5}           % 5 files max
    ]}
].
